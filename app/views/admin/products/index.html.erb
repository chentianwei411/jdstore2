<h2>Product List</h2>
<div class="pull-right" style="padding-bottom:20px;">
  <%= link_to("新增产品", new_admin_product_path, class: "btn btn-sm btn-primary" )%>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>商品照片</th>
      <th>商品名称</th>
      <th>价格</th>
      <th>操作选项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|  %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <% if product.image.present?%>
            <%= image_tag(product.image.thumb.url, class: "thumbnail")%>
          <% else %>
            <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
            <!--http://placehold.it/200x200&text=No Pic 代码很重要  -->
          <% end %>
        </td>
        <td><%= product.title%></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("修改", edit_admin_product_path(product), class: "btn btn-primary btn-xs" )%> 
          <%= link_to("删除", admin_product_path(product), class: "btn btn-danger btn-xs", :method  => :delete, data: { confirm: "确定删除此商品吗？"} )%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
