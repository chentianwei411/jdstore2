<h2>New Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, :label => "物品名称"%>
  </div>

  <div class="group">
    <%= f.input :description, :label => "描述"%>
  </div>

  <div class="group">
    <%= f.input :quantity, :label => "数量" %>
  </div>

  <div>
    <%= f.input :price, :label => "价格"%>
  </div>

  <%= f.submit "提交", data: { dsiable_with:"Submitting..."} %>

<% end %>
